pipeline {
    agent any

    stages {
        stage('state') {
            steps {
                sh 'cd /var/Devops_demo/ansible'
                sh 'sudo ansible-playbook /var/Devops_demo/ansible/instance_state.yml -e "instance_state=$instance_state" -e "instance_id=$instance_id" '    
                
            }
        }
    }
}
pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'cd /var/lib/jenkins/workspace/ec2_-lunch_instance/ansible'
                sh 'sudo ansible-playbook /var/lib/jenkins/workspace/ec2_-lunch_instance/ansible/lunch_ec2.yml -e "instance_name=[$instance_name]" -e "instance_type=$instance_type" '    
                
            }
        }
    }
}
